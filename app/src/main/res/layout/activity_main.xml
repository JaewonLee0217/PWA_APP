<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F6F6F6"
    android:id="@+id/mainpage"
    android:backgroundTint="#FFFDE1">
    <View
        android:id="@+id/mainmenu1"
        android:layout_width="264dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:lineSpacingExtra="2sp"
        android:background="@drawable/mainmenu1"
        />
    <View
        android:id="@+id/mainmenu2"
        android:layout_width="264dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:lineSpacingExtra="2sp"
        android:background="@drawable/mainmenu2"
        />
    <View
        android:id="@+id/mainmenu3"
        android:layout_width="264dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="500dp"
        android:lineSpacingExtra="2sp"
        android:background="@drawable/mainmenu3"
        />
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
</RelativeLayout>